<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayuda_Hablemos">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="¿Como funciona una la aplicación de texto a voz?"
                     />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:text="En la pantalla ''Hablemos'' encontrará un cuadro de texto en el cual puede ingresar lo que necesita hablar similar a este:"
                    android:textColor="#595757"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/muestraH"
                    android:layout_width="match_parent"
                    android:layout_height="211dp"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="48dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="sans-serif-black"
                    android:hint="INGRESA EL TEXTO DE VOZ"
                    android:paddingBottom="150dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="50dp"
                    android:editable="false"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Luego pulse el botón hablar para que se reproduzca el audio de lo escrito en el cuadro de texto anterior"
                    android:textAlignment="center"
                    android:textColor="#595757"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnHablar"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"
                    android:text="Hablemos!"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="359dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Puede seleccionar frases favoritar o recurrentes como atajos"
                    android:textAlignment="center"
                    android:textColor="#595757"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnFavoritos"
                    android:layout_width="79dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_baseline_star_24"
                    app:backgroundTint="@color/black"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>